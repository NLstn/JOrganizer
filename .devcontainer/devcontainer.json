{
	"name": "JOrganizer Dev Container",
	
	// Base image with Java 21 on Debian Bookworm (latest stable)
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bookworm",

	// Features add additional tools and runtimes to the container
	"features": {
		// GitHub CLI for working with GitHub from the command line
		"ghcr.io/devcontainers/features/github-cli:1": {
			"version": "latest"
		}
	},

	// Customize VS Code settings and extensions for this project
	"customizations": {
		"vscode": {
			"settings": {
				// Java configuration
				"java.configuration.updateBuildConfiguration": "automatic",
				"java.compile.nullAnalysis.mode": "automatic",
				// Maven configuration
				"maven.executable.path": "mvn",
				// Editor settings
				"editor.formatOnSave": true,
				"editor.tabSize": 4,
				"editor.insertSpaces": false,
				"files.insertFinalNewline": true,
				"files.trimTrailingWhitespace": true
			},
			"extensions": [
				// Java development pack (includes Red Hat Java, debugger, test runner, and dependency viewer)
				"vscjava.vscode-java-pack",
				// Maven support
				"vscjava.vscode-maven",
				// GitHub integration
				"github.vscode-pull-request-github"
			]
		}
	},

	// Run commands after the container is created to set up the development environment
	"postCreateCommand": "mvn verify",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Connect as the default non-root user for better security
	"remoteUser": "vscode"
}
